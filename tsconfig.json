{
  "compilerOptions": {
     "outDir": "./dist", // Указываем, куда компилировать файлы
     "rootDir": "./src", // Указываем корень исходных файлов
     "target": "ESNext",
     "module": "ESNext",
     "moduleResolution": "node",
     "jsx": "react-jsx",
     "baseUrl": "./src",
     "paths": {
        "*": ["*"]
     },
     "esModuleInterop": true,
     "allowSyntheticDefaultImports": true,
     "skipLibCheck": true,
     "strict": true,
     "strictFunctionTypes": true
  },
  "include": ["src/**/*"]
}
